Solution:

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	Scanner s=new Scanner(System.in);
    int t=s.nextInt();
    while(t-->0){
        int n=s.nextInt();
        int a[]=new int[n];
        int m=-1;
        for(int i=0;i<n;i++){
            a[i]=s.nextInt();
        }
        Arrays.sort(a);
        int x=0;
        for(int i=0;i<n;i++){
            if(a[i]>i+1){
                x=1;
                break;
            }
        }
        if(x==0){
            System.out.println("Yes");
        }
        else{
            System.out.println("NO");
        }
    }
	}
}
