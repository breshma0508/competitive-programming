import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();
        int minCost = Integer.MAX_VALUE;
        
        for(int i = 0; i < n; i++){
            int x = sc.nextInt();
            minCost = Math.min(minCost, Math.abs(x));
        }
        
        System.out.println(minCost);
    }
}
